{
  "compileOnSave": false,
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "files": ["src/main.ts"],
  "exclude": [
    "src/app/core/models/contact.interface.ts",
    "src/app/core/models/project.interface.ts",
    "src/app/core/services/contact.service.ts",
    "src/app/core/services/api.service.ts",
    "src/app/features/about/about.component.ts",
    "src/app/features/blog/blog.component.ts",
    "src/app/features/contact/contact.component.ts",
    "src/app/features/experience/experience.component.ts",
    "src/app/features/home/home.component.ts",
    "src/app/features/projects/projects.component.ts",
    "src/app/features/skills/skills.component.ts",
    "src/app/layout/footer/footer.component.ts",
    "src/app/layout/navbar/navbar.component.ts",
    "src/app/layout/sidebar/sidebar.component.ts",
    "src/app/layout/theme-switcher/theme-switcher.component.ts",
    "src/app/shared/components/button/button.component.ts",
    "src/app/shared/components/badge/badge.component.ts",
    "src/app/shared/components/loader/loader.component.ts",
    "src/app/shared/components/modal/modal.component.ts",
    "src/app/shared/components/project-card/project-card.component.ts",
    "src/app/shared/components/section-title/section-title.component.ts",
    "src/app/shared/components/toast/toast.component.ts",
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "skipLibCheck": true,
    "lib": ["ES2022", "dom"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@core/*": ["src/app/core/*"],
      "@shared/*": ["src/app/shared/*"],
      "@features/*": ["src/app/features/*"],
      "@layout/*": ["src/app/layout/*"],
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
